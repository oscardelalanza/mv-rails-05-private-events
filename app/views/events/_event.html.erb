<li id="event-<%= event.id %>">
  <span class="user"><%= link_to event.user.name, event.user %></span>
  <span class="description">
    <%= event.description %>
  </span>
  <span class="timestamp">
    Happening on <%= event.date.to_s(:long) %>.
  </span>
  <% if current_user_helper?(event.user) %>
    <%= link_to "Invite", attendee_path, event_id: event.id %>
  <% end %>
</li>